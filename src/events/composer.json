{
    "name": "hypervel/events",
    "type": "library",
    "description": "The events package for Hypervel.",
    "license": "MIT",
    "keywords": [
        "php",
        "events",
        "swoole",
        "hypervel"
    ],
    "authors": [
        {
            "name": "Albert Chen",
            "email": "albert@hypervel.org"
        },
        {
            "name": "Raj Siva-Rajah",
            "homepage": "https://github.com/binaryfire"
        }
    ],
    "support": {
        "issues": "https://github.com/hypervel/components/issues",
        "source": "https://github.com/hypervel/components"
    },
    "autoload": {
        "psr-4": {
            "Hypervel\\Events\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    },
    "require": {
        "php": "^8.4",
        "hypervel/bus": "^0.4",
        "hypervel/collections": "^0.4",
        "hypervel/context": "^0.4",
        "laravel/serializable-closure": "^1.3"
    },
    "suggest": {
        "hypervel/queue": "Required to use queueable listeners. (~0.4)"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "hypervel": {
            "providers": [
                "Hypervel\\Events\\EventServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-main": "0.4-dev"
        }
    }
}
